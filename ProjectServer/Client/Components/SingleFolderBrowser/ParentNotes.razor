@using ProjectServer.Shared

<div class="p-2" style="background-color: @AbfParent.Color; font-family: 'Arial'; font-size: 1.5em; font-weight: 600;">
	@AbfParent.AbfID
</div>

<div class="border-bottom p-2" style="background-color: #E6E6E6;">
	<div class="d-flex flex-row form-check p-0 m-0">
		@foreach (string color in CellsTxt.GetDefaultColors())
		{
			<div class="px-2 me-1 mt-1 mb-2" style="background-color: @color; border: 1px solid #bebebe;">
				<input class="form-check-input p-0"
				   style="margin: 10px 3px;"
				   type="radio"
				   name="radioColor"
				   checked="@(color == AbfParent.Color)" />
			</div>
		}
	</div>

	<div class="d-flex">
		<input type="text" class="flex-fill me-2 form-control form-control-sm" placeholder="comment" value="@AbfParent.Comment">
		<button type="button" class="flex-fill btn btn-primary btn-sm">Save</button>
	</div>
</div>

@code {
	[Parameter]
	[EditorRequired]
	public AbfParent AbfParent { get; set; } = new();
}
